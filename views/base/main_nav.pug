//- Mobile Navigation Button
style.
    canvas {
        cursor: none;
    }
    .menu-toggle {
        scale:1.25;
        text-decoration:none;
    }

    #side-menu {
        padding:1rem;
        position: fixed;
        top:0;
        left: -1000dvw;
        width: 100dvw;
        height: 100dvh;
        background-color: var(--pico-muted-border-color);
        overflow-y: auto;
        transition: left 0.3s ease;
        visbility:hidden;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
        z-index:100;
    }

    #side-menu.open {
        top:0;
        left: 0;
    }

    #side-menu .close {
        visbility:visible;
        position:absolute;
        display: block;
        text-align: right;
        top:-.5rem;
        right:.5rem;
        font-size: 3rem;
        text-decoration: none;
    }

    .menu-toggle {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        text-decoration: none;
    }

    /* Hide the side menu on larger screens */
    @media (min-width: 768px) {
        #side-menu {
        //     display: none;
        }
        .menu-toggle {
            //   display: none;
        }
    }

    @media (max-width: 350px) {
        .notes { display:none; }

    }

    /* Breadcrumb Navigation */
    nav.breadcrumb ul {
        list-style: none;
        display: flex;
        align-items: center;
    }

    nav.breadcrumb li {
        flex:1;
    }

    nav.breadcrumb li + li::before {
        content: ">";
        margin: 0 8px;
        color: #666;
    }

    nav.breadcrumb a {
        text-decoration: none;
        color: inherit;
    }

